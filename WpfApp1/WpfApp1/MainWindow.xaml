<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="525">
    <DockPanel VerticalAlignment="Stretch">
        <TextBox x:Name="textBox" DockPanel.Dock="Top" Margin="0,0,0,0" TextWrapping="Wrap" Text="Duration Times go here" VerticalAlignment="Stretch" Width="auto" Height="500" HorizontalAlignment="Stretch"/>

        <Button x:Name="button" Content="Choose PowerPoint File..." HorizontalAlignment="Left"  VerticalAlignment="Top" Width="155" Click="button_Click" DockPanel.Dock="Bottom"/>

    </DockPanel>
</Window>
